{
  "name": "ai-chat-exporter",
  "version": "0.1.0",
  "description": "导出 Gemini、DeepSeek 等 AI 聊天记录为 Markdown 的浏览器扩展",
  "type": "module",
  "scripts": {
    "predev": "node scripts/copy-files.js",
    "prebuild": "node scripts/copy-files.js",
    "dev": "vite",
    "build": "vite build",
    "build:zip": "vite build && cd dist && bestzip ../ai-chat-exporter-v$npm_package_version.zip * && cd ..",
    "preview": "vite preview"
  },
  "keywords": [
    "chrome-extension",
    "browser-extension",
    "ai-chat",
    "export",
    "markdown",
    "gemini",
    "deepseek"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "vite": "^5.4.11",
    "bestzip": "^2.2.1"
  }
}
